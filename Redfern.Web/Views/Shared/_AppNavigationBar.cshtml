
<div class="navigation-bar fixed-top opacity shadow dark" id="AppNavigationBar">
    <div class="navigation-bar-content ">
        <a href="/" class="element">
            @*<span class="icon-cloud"></span> <img alt="Logo" src="~/images/bank-alt-2-white-64.png" style="height:15px;padding:0;margin:0" class="place-left" /> &nbsp;*@
            <span style="font-size:18px; font-weight:600;padding:0;margin:0">Redfern</span>
        </a>

        <span class="element-divider"></span>

        <div class="element">    
            <a class="dropdown-toggle" href="#" data-bind="text: selectedMenu">@( !String.IsNullOrEmpty(ViewBag.SelectedMenu) ? ViewBag.SelectedMenu : "My School Tasks")</a>
            <ul class="dropdown-menu dark" data-role="dropdown" style="z-index:999">
                <li><a href="#">Ktchen Project</a></li>
                <li><a href="#">Ktchen Project</a></li>
                <li class="divider"></li>
                <li><a href="#@Url.Action("index", "boards")">Show All</a></li>

            </ul>            
        </div>

        <a class="element brand" href="#" data-bind="click: createBoard"><span class="icon-plus"></span></a>

        <div class="element input-element">
            <form>
                <div class="input-control text">
                    <input type="text" placeholder="Search...">
                    <button class="btn-search"></button>
                </div>
            </form>
        </div>

        @if (User.Identity.IsAuthenticated)
        {
            <div class="element place-right">
                <a href="#" class="fg-white"><i class="icon-cog"></i></a>
            </div>

            <div class="element place-right">
                <a href="#" class="dropdown-toggle">
                    <i class="icon-user"></i>
                    @ViewBag.AuthenticatedUser.FullName
                </a>
                <ul class="dropdown-menu dark place-right" data-role="dropdown">
                    <li><a href="#/profile">Profile </a></li>
                    <li class="divider"></li>
                    <li><a href="javascript:$('form#signout').submit()">Sign out</a></li>
                </ul>
            </div>
            
        }
        else
        {
            <a class="element place-right">
                Sign in
            </a>
        }

    </div>
</div>

<div id="CreateBoardDialog" style="display:none">
    <div class="" style="">
        <div class="padding10" style="width:100%">
            <label>Name</label>
            <div class="input-control text">
                <input data-bind="value: name" />
            </div>
            <p>A board is a collection of cards.  Use it to manage a project, track a collection, or organize anything. </p>
            <p>This board will be <strong>private</strong>.</p>

        </div>
    </div>
    <div class="padding10 place-bottom-left">
        <button class="bg-darker fg-white" data-bind="click: create" >Create</button>

    </div>
</div>

@using (Html.BeginForm("signout", "account", FormMethod.Post, new { id = "signout" }))
{
    @Html.AntiForgeryToken()
}
